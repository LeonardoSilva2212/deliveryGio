<main class="login-container-entrar">

    <div class="create-account-section-entrar">

        <h1>Entrar</h1>

        <form action="/login" method="POST" class="login-form-entrar">

            <div class="form-group-entrar">

                <label for="email">Email:</label>
                <div class="input-container-entrar">
                    <input type="email" id="email" name="email" required class="login-email-input-entrar">
                </div>
            </div>

            <div class="form-group-entrar">
                
                <label for="password">Senha:</label>
                <div class="input-container-entrar">
                    <input type="password" id="password" nome="password" required class="login-password-input-entrar">
                </div>

            </div>
            <button type="submit" class="btn-login-submit-entrar">Entrar</button>
        </form>
    </div>
</main>
