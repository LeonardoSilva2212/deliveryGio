<main class="container">

    <div class="logo">
        <img src="/img/logoImg.svg" alt="Logo">
    </div>

    <div class="search-bar">
        <img src="/img/lupaImg.svg" alt="Search Icon">
         <input type="text" placeholder="Pesquisar...">
    </div>

        <hr>

    <div class="location-container">
        <span id="location-display">Inserir localização</span>
        <img src="/img/setaBaixo.svg" alt="Down Arrow" id="toggle-location">
        <input type="text" id="location-input" placeholder="Digite sua localização...">
    </div>

        <hr id="2">


    <div class="options">
       <p>Já Possui uma conta?</p>
       <a href="/login"><button>Login</button></a>
       <img src="img/bagImg.svg" alt="">
    </div>

</main>

<section id="cupomBanner">

    <div id="cupomImg">

        <img src="/img/cupomImg.svg" alt="">
        <div id="cupomText">
            <h1>Bem vindo ao FoodDelivery! Cupons aos fins de semana e feriados!</h1>
        </div>

    </div>

</section>

