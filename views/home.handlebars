            <div class="carousel-item-home"><img src="/img/comidas3.svg" alt="Imagem 3"></div>
            <div class="carousel-item-home"><img src="/img/comidas4.svg" alt="Imagem 4"></div>
            <div class="carousel-item-home"><img src="/img/comidas5.svg" alt="Imagem 5"></div>
            <div class="carousel-item-home"><img src="/img/comidas6.svg" alt="Imagem 6"></div>
            <div class="carousel-item-home"><img src="/img/comidas7.svg" alt="Imagem 7"></div>
            <div class="carousel-item-home"><img src="/img/comidas8.svg" alt="Imagem 8"></div>
            <div class="carousel-item-home"><img src="/img/comidas9.svg" alt="Imagem 9"></div>
        </div>
    <button class="carousel-button-home next">▶</button>
</div>

<div class="carrossel-container2">
    <button class="carousel-button2 prev">◀</button>
        <div class="carousel2">
            <div class="carousel-item2"><img src="/img/card1.svg" alt="Imagem 1"></div>
            <div class="carousel-item2"><img src="/img/card2.svg" alt="Imagem 2"></div>
            <div class="carousel-item2"><img src="/img/card3.svg" alt="Imagem 3"></div>
            <div class="carousel-item2"><img src="/img/card4.svg" alt="Imagem 4"></div>
