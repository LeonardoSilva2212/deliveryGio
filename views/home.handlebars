</div>

<hr id="hr-inferior">

<div class="carrossel-container3">
    <button class="carousel-button3 prev">◀</button>
        <div class="carousel3">
            <div class="carousel-item3"><img src="/img/bigCard.svg" alt="imagem 1"></div>
            <div class="carousel-item3"><img src="/img/bigCard2.svg" alt="imagem 2"></div>
            <div class="carousel-item3"><img src="/img/bigCard3.svg" alt="imagem 3"></div>
        </div>
    <button class="carousel-button3 next">▶</button>
</div>

<section class="menus">

    <div class="dropdown-container">
        <div class="dropdown">

            <div class="dropdownInit">
                <span id="order-display">Ordenar</span>
                <img src="/img/setaBaixo.svg" alt="Down Arrow" class="toggle-dropdown" data-dropdown="order-dropdown">
            </div>

            <div class="dropdown-menu" id="order-dropdown">
                <div class="dropdown-item">
                    <img src="/img/padraoImg.svg" alt="Ícone Padrão">
                    <span>Ordenação padrão</span>
                </div>
                <div class="dropdown-item">
                    <img src="/img/precoImg.svg" alt="Ícone Preço">
                    <span>Preço</span>
                </div>
                <div class="dropdown-item">
                    <img src="/img/avaliacaoImg.svg" alt="Ícone Avaliação">
                    <span>Avaliação</span>
                </div>
                <div class="dropdown-item">
                    <img src="/img/entregaImg.svg" alt="Ícone Tempo de Entrega">
                    <span>Tempo de entrega</span>
                </div>
                <div class="dropdown-item">
                    <img src="/img/tempoImg.svg" alt="Ícone Taxa de Entrega">
                    <span>Taxa de entrega</span>
                </div>
                <div class="dropdown-item">
                    <img src="/img/distanciaImg.svg" alt="Ícone Menor Distância">
                    <span>Menor distância</span>
                </div>
            </div>
        </div>
        
        <div class="dropdown">

            <div class="dropdownInit">
                <span id="vale-refeicao-display">Vale Refeição</span>
                <img src="/img/setaBaixo.svg" alt="Down Arrow" class="toggle-dropdown" data-dropdown="vale-refeicao-dropdown">
            </div>

            <div class="dropdown-menu" id="vale-refeicao-dropdown">
                <label class="dropdown-item">
                    <span>Vr Refeição</span>
                    <input type="checkbox">
                </label>
                <label class="dropdown-item">
                    <span>Pluxe Refeição</span>
                    <input type="checkbox">
                </label>
                <label class="dropdown-item">
                    <span>Alelo Refeição</span>
                    <input type="checkbox">
                </label>
                <label class="dropdown-item">
                    <span>Ticket Refeição</span>
                    <input type="checkbox">
                </label>
                <label class="dropdown-item">
                    <span>Ben Refeição</span>
                    <input type="checkbox">
                </label>
            </div>
        </div>
        
        <div class="dropdown">
            
            <div class="dropdownInit">
                <span id="distance-display">Distância</span>
                <img src="/img/setaBaixo.svg" alt="Down Arrow" class="toggle-dropdown" data-dropdown="distance-dropdown">
            </div>

            <div class="dropdown-menu" id="distance-dropdown">
                <input type="range" min="0" max="1000" value="0" id="distance-range">
                <span id="distance-value">0 km</span>
            </div>
        </div>
    </div>

</section>

<div class="lojas">

    <h2>Lojas</h2>

<div class="restaurants-container">
    {{#each restaurantes}}
    <div class="restaurant-card">
        <img class="card-image" src="{{this.imagem_url}}" alt="{{this.nome}}">
        <h3>{{this.nome}}</h3>
        <p>Avaliação: {{this.avaliacao}}★</p>
        <p>Tipo: {{this.tipo}}</p>
        <p>Distância: {{this.distancia}} km</p>
        <p>Tempo médio de entrega: {{this.tempo_entrega}} min</p>
        <p>Valor médio: R$ {{this.valor_medio}}</p>
        <a class="ver-mais-btn" href="/restaurante/{{this.id}}">Ver Mais</a>
    </div>
    {{/each}}
</div>

</div>

