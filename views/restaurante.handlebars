<main>

    <div class="header">
        <img src="/{{restaurante.imagem_url}}" alt="{{restaurante.nome}}">
        <h1>{{restaurante.nome}}</h1>
    </div>

    <section>

        <div class="info">
            <p>Avaliação: {{restaurante.avaliacao}}★</p> 
            <p>Tipo: {{restaurante.tipo}}</p> 
            <p>Distância: {{restaurante.distancia}} km</p>
            <p>Tempo de Entrega: {{restaurante.tempo_entrega}} minutos</p> 
            <p>Valor Médio: R$ {{restaurante.valor_medio}}</p>
        </div>

         <h2>Lanches:</h2>

        <div class="carousel-container">
            <button class="carousel-button prev">◀</button>
            <div class="carousel">
                {{#each lanches}}
                    <div class="carousel-item">
                        <img src="/{{this.imagem_url}}" alt="Lanche">
                    </div>
                {{/each}}
            </div>

            <button class="carousel-button next">▶</button>
        </div>

        <h2>Acompanhamentos:</h2>

        <div class="carousel-container-acomp">
            <button class="carousel-button-acomp prev">◀</button>
            <div class="carousel-acomp">
                {{#each acompanhamentos}}
                    <div class="carousel-item-acomp">
                        <img src="/{{this.imagem_url}}" alt="acompanhamentos">
                    </div>
                {{/each}}
            </div>

            <button class="carousel-button-acomp next">▶</button>
        </div>

        <h2>Sobremesas:</h2>

        <div class="carousel-container-sobremesas">
            <button class="carousel-button-sobremesas prev">◀</button>
            <div class="carousel-sobremesas">
                {{#each sobremesas}}
                    <div class="carousel-item-sobremesas">
                        <img src="/{{this.imagem_url}}" alt="sobremesas">
                    </div>
                {{/each}}
            </div>

            <button class="carousel-button-sobremesas next">▶</button>
        </div>

    </section>
    
</main>
<script src="/js/lanchesCarousel.js"></script>
<script src="/js/acompCarousel.js"></script>
<script src="/js/sobremesasCarousel.js"></script>

